<% include ./partials/header %>
<!--SUMMERNOTE-->
<!-- include libraries(bootstrap) -->
<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
<!-- include summernote css/js -->
<link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet">
<!---->   

<div class="ui main text container segment">
    <h2 class="ui center aligned icon header">
      <i class="edit icon"></i>
      Edit Post<br>
      <%= blog.title %>
    </h2>
    <!-- It's optional define any route: OR
    `/blogsupdate/<%= blog._id %>` -->
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>    
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
        </div>    
        <div class="field"> 
            <label>Blog Content</label>
            <textarea  id="summernote" name="blog[body]"><%= blog.body %></textarea>
        </div>
      <button class="ui inverted big violet button">Submit</button>
    </form>
</div>

<script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script> 
<script>
$(document).ready(function() {
$('#summernote').summernote();
});
</script>
<% include ./partials/footer %>